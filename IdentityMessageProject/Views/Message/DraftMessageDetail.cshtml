@model Message
@{
    ViewData["Title"] = "DraftMessageDetail";
    Layout = "~/Views/Shared/_DefaultLayout.cshtml";
}

<div class="container-fluid">
	<div class="row">
		<div class="col-lg-12">
			<div class="card">
				<div class="card-body">

					<div class="email-left-box">
						@await Component.InvokeAsync("_LeftBoxInMessage")
					</div>

					<div class="email-right-box">
						<form method="post" asp-action="SaveDraft" asp-controller="Message">
							<div class="compose-content mt-5">

								<input type="hidden" asp-for="SenderId" />
								<input type="hidden" asp-for="MessageId" />

								<div class="form-group">
									@Html.DropDownList("ReceiverId", ViewBag.users as List<SelectListItem>, "Kime", new { @class = "form-control" })
									<span class="text-danger" asp-validation-for="ReceiverId"></span>
								</div>
								<div class="form-group">
									<input type="text" class="form-control bg-transparent" placeholder=" Konu" asp-for="@Model.Title">
									<span class="text-danger" asp-validation-for="Title"></span>
								</div>
								<div class="form-group">
									<textarea class="textarea_editor form-control bg-light" rows="15" placeholder="Mesajınız ..." asp-for="@Model.Content"></textarea>
									<span class="text-danger" asp-validation-for="Content"></span>
								</div>

							</div>

							<div class="text-right m-t-15">
								<button class="btn btn-dark m-b-30 m-t-15 f-s-14 p-l-20 p-r-20" type="submit" formaction="/Message/SaveDraft/@Model.MessageId">
									<i class="fa fa-folder m-r-5 f-s-12"></i> Taslaklara Kaydet
								</button>

								<button class="btn btn-primary m-b-30 m-t-15 f-s-14 p-l-20 p-r-20 m-r-10" type="submit" formaction="/Message/NewMessage"><i class="fa fa-paper-plane m-r-5"></i> Gönder</button>

							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>




