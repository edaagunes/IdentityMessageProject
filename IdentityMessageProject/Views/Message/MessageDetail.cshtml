@model Message
@{
    ViewData["Title"] = "MessageDetail";
    Layout = "~/Views/Shared/_DefaultLayout.cshtml";
}

<div class="container-fluid">
	<div class="row">
		<div class="col-lg-12">
			<div class="card">
				<div class="card-body">
					<div class="email-left-box">
						@await Component.InvokeAsync("_LeftBoxInMessage")
					</div>
                    <div class="email-right-box">
                        <input type="hidden" asp-for="SenderId"/>
                        <input type="hidden" asp-for="MessageId"/>

                        <div class="toolbar" role="toolbar">
                            <div class="btn-group m-b-20">
                                <button type="button" class="btn btn-light">
                                    <i class="fa fa-archive"></i>
                                </button>
                                <button type="button" class="btn btn-light">
                                    <i class="fa fa-exclamation-circle"></i>
                                </button>
                                <button type="button" class="btn btn-light">
                                    <i class="fa fa-trash"></i>
                                </button>
                            </div>
                        </div>

                        <div class="read-content">
                            <div class="media pt-5">
                                <img class="mr-3 rounded-circle" style="width:50px;height:50px" src="@Model.Sender.ImageUrl">
                                <div class="media-body">
                                    <h5 class="m-b-3">@Model.Sender.Name @Model.Sender.Surname</h5>
                                    <p class="m-b-2">@Model.CreatedDate.ToString("dd MMM yyyy")</p>
                                </div>

                            </div>
                            <hr>
                            <div class="media mb-4 mt-1">
                                <div class="media-body">
                                    <span class="float-right">07:23 AM</span>
                                    <h4 class="m-0 text-primary">@Model.Title</h4>
                                </div>
                            </div>
                            <p>
                               @Model.Content
                            </p>

                            <hr>
                            <div class="form-group p-t-15">
                                <textarea class="w-100 p-20 l-border-1" name="" id="" cols="30" rows="5" placeholder="It's really an amazing.I want to know more about it..!"></textarea>
                            </div>
                        </div>
                        <div class="text-right">
                            <button class="btn btn-primaryw-md m-b-30" type="button">Send</button>
                        </div>
                    </div>
				</div>
			</div>
		</div>
	</div>
</div>

