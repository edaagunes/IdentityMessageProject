@model List<Message>
@{
	ViewData["Title"] = "Inbox";
	Layout = "~/Views/Shared/_DefaultLayout.cshtml";
}

<div class="container-fluid">
	<div class="row">
		<div class="col-lg-12">
			<div class="card">
				<div class="card-body">
					<div class="email-left-box">
						@await Component.InvokeAsync("_LeftBoxInMessage")
					</div>
					<div class="email-right-box">
						<div class="email-list m-t-15">
							@foreach (var item in Model)
							{
								<input type="hidden" asp-for="@item.ReceiverId" />
								<div class="message">
									
										<div class="col-mail col-mail-1">

											<a href="/Message/ChangeReadStatus/@item.MessageId">

												@if (item.IsRead==true)
												{
													<i class="fa fa-envelope-open text-success"></i>
												}
												else
												{
													<i class="fa fa-envelope text-danger"></i>
												}
											</a>
										</div>
										<div class="col-mail col-mail-2">
											<div class="subject">
											<a href="/Message/MessageDetail/@item.MessageId">@item.Title</a>
												</div>
											<div class="date">@item.CreatedDate.ToString("HH:mm  ddd")</div>

										</div>									
								</div>
							}
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
