

    <a href="/Message/NewMessage" class="btn btn-primary btn-block">Yeni Mesaj</a>

<div class="mail-list mt-4">

    <a href="/Message/Inbox" class="list-group-item border-0 p-r-0 @((ViewBag.ActiveTab == "Inbox") ? "text-primary" : "")">
        <i class="fa fa-inbox font-18 align-middle mr-2"></i>Gelen Kutusu
        <span class="badge badge-primary badge-sm float-right m-t-5">@ViewBag.messageCount</span>
    </a>

    <a href="/Message/Outbox" class="list-group-item border-0 p-r-0 @((ViewBag.ActiveTab == "Outbox") ? "text-primary" : "")">
        <i class="fa fa-paper-plane font-18 align-middle mr-2"></i>Giden Kutusu
        <span class="badge badge-secondary badge-sm float-right m-t-5">@ViewBag.messageSendCount</span>
    </a>

    <a href="/Message/DraftMessageList" class="list-group-item border-0 p-r-0  @((ViewBag.ActiveTab == "Draft") ? "text-primary" : "")">
        <i class="mdi mdi-file-document-box font-18 align-middle mr-2"></i>Taslaklar
        <span class="badge badge-warning badge-sm float-right m-t-5">@ViewBag.draftCount</span>
    </a>

    <a href="/Message/DeleteMessages" class="list-group-item border-0 p-r-0 @((ViewBag.ActiveTab == "Trash") ? "text-primary" : "")">
        <i class="fa fa-trash font-18 align-middle mr-2"></i>Çöp Kutusu
        <span class="badge badge-danger badge-sm float-right m-t-5">@ViewBag.deleteMessageCount</span>
    </a>
</div>


